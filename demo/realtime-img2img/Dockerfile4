FROM pytorch/pytorch:2.5.1-cuda12.4-cudnn9-runtime AS backend

ENV DEBIAN_FRONTEND=noninteractive

RUN apt-get update && \
    apt-get install -y --no-install-recommends \
    git \
    wget \
    curl \
    python3-pip \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

COPY ./requirements3.txt requirements.txt
RUN pip install --no-cache-dir -r requirements.txt

RUN pip install --no-cache-dir git+https://github.com/himmelroman/StreamDiffusion.git@main#egg=streamdiffusion  # [tensorrt]
# RUN python -m streamdiffusion.tools.install-tensorrt


